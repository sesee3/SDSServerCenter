<!DOCTYPE html>
<html lang="it">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sessioni - Sistema Autenticazione</title>
    <link rel="stylesheet" href="/css/theme.css">
    <link rel="stylesheet" href="/css/dashboard.css">
    <script src="/scripts/common.js" defer></script>
</head>
<body>
    <nav class="navbar">
        <div class="navbar-container">
            <h1 class="navbar-brand">üîê Sistema Autenticazione</h1>
            <div class="navbar-links">
                <a href="/user/dashboard" class="nav-link">Dashboard</a>
                <a href="/user/sessions" class="nav-link active">Sessioni</a>
                <a href="/server/activities" class="nav-link">Attivit√†</a>
                <button class="btn btn-secondary btn-sm" onclick="logout()">Logout</button>
            </div>
        </div>
    </nav>
    
    <div class="container">
        <h2>üì± Le Tue Sessioni Attive</h2>
        <div id="sessions"></div>
    </div>
    
    <script>
        requireAuth();
        initTheme();
        
        async function loadSessions() {
            const token = getToken();
            if (!token) return;
            
            try {
                const response = await fetch('/api/v1/auth/sessions', {
                    headers: { 'Authorization': `Bearer ${token}` }
                });
                
                if (response.status === 401) {
                    window.location.href = '/revoked';
                    return;
                }
                
                const sessions = await response.json();
                displaySessions(sessions);
            } catch (error) {
                handleApiError(error);
            }
        }
        
        function displaySessions(sessions) {
            const container = document.getElementById('sessions');
            container.innerHTML = '';
            
            sessions.forEach(session => {
                const sessionEl = document.createElement('div');
                sessionEl.className = 'session';
                
                const date = formatDate(session.lastAccessAt);
                
                sessionEl.innerHTML = `
                    <div class="session-info">
                        <h3>
                            ${escapeHtml(session.deviceInfo.device)} - ${escapeHtml(session.deviceInfo.browser)}
                            ${session.isCurrent ? '<span class="current-badge">Corrente</span>' : ''}
                        </h3>
                        <p>Sistema operativo: ${escapeHtml(session.deviceInfo.os)}</p>
                        <p>IP: ${escapeHtml(session.ipAddress)}</p>
                        <p>Ultimo accesso: ${date}</p>
                    </div>
                    <button class="btn btn-danger" ${session.isCurrent ? 'disabled' : ''}
                            onclick="deleteSession('${session.id}')">
                        ${session.isCurrent ? 'Sessione Corrente' : 'Elimina'}
                    </button>
                `;
                
                container.appendChild(sessionEl);
            });
        }
        
        async function deleteSession(sessionId) {
            if (!confirm('Sei sicuro di voler eliminare questa sessione?')) {
                return;
            }
            
            const token = getToken();
            
            try {
                await fetch(`/api/v1/auth/sessions/${sessionId}`, {
                    method: 'DELETE',
                    headers: { 'Authorization': `Bearer ${token}` }
                });
                
                loadSessions();
            } catch (error) {
                handleApiError(error);
            }
        }
        
        loadSessions();
    </script>
</body>
</html>

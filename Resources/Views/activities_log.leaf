<!DOCTYPE html>
<html lang="it">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Attivit√† - Sistema Autenticazione</title>
    <link rel="stylesheet" href="/css/theme.css">
    <link rel="stylesheet" href="/css/dashboard.css">
    <script src="/scripts/common.js" defer></script>
</head>
<body>
    <nav class="navbar">
        <div class="navbar-container">
            <h1 class="navbar-brand">üîê Sistema Autenticazione</h1>
            <div class="navbar-links">
                <a href="/user/dashboard" class="nav-link">Dashboard</a>
                <a href="/user/sessions" class="nav-link">Sessioni</a>
                <a href="/server/activities" class="nav-link active">Attivit√†</a>
                <button class="btn btn-secondary btn-sm" onclick="logout()">Logout</button>
            </div>
        </div>
    </nav>
    
    <div class="container">
        <h2>üìä Registro Attivit√† Utenti</h2>
        <table id="activities">
            <thead>
                <tr>
                    <th>Data/Ora</th>
                    <th>Utente</th>
                    <th>Azione</th>
                    <th>Dispositivo</th>
                    <th>IP</th>
                </tr>
            </thead>
            <tbody></tbody>
        </table>
    </div>
    
    <script>
        requireAuth();
        initTheme();
        
        async function loadActivities() {
            const token = getToken();
            if (!token) return;
            
            try {
                const response = await fetch('/api/activities', {
                    headers: { 'Authorization': `Bearer ${token}` }
                });
                
                if (response.status === 401) {
                    window.location.href = '/revoked';
                    return;
                }
                
                const activities = await response.json();
                displayActivities(activities);
            } catch (error) {
                handleApiError(error);
            }
        }
        
        function displayActivities(activities) {
            const tbody = document.querySelector('#activities tbody');
            tbody.innerHTML = '';
            
            activities.reverse().forEach(activity => {
                const tr = document.createElement('tr');
                const date = formatDate(activity.timestamp);
                
                tr.innerHTML = `
                    <td>${date}</td>
                    <td>${escapeHtml(activity.username)}</td>
                    <td>${escapeHtml(activity.action)}</td>
                    <td>${escapeHtml(activity.deviceInfo.device)} - ${escapeHtml(activity.deviceInfo.browser)}</td>
                    <td>${escapeHtml(activity.ipAddress)}</td>
                `;
                
                tbody.appendChild(tr);
            });
        }
        
        loadActivities();
    </script>
</body>
</html>
